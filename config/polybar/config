[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 25

background = #1e1f29
background_alt = #4a4b53
foreground = #eff0eb
foreground_alt = #78787e

fixed-center = true

font-0 = "Noto Sans:style=Bold:pixelsize=10;1"
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=10;2"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=10;2"
font-3 = "Font Awesome 5 Brands:pixelsize=10;2"

modules-left = bspwm
modules-right = player-info fuzzy-clock

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

tray-position = right
tray-background = #1e1f29
tray-padding = 6

[module/bspwm]
type = internal/bspwm

ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = IX;
ws-icon-3 = X;
ws-icon-default = 


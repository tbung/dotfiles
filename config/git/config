[core]
	editor = "nvim"
	pager = "less"
	sshCommand = "/usr/bin/ssh"
	excludesfile = ~/.config/git/ignore

[credential]
	helper = "cache"

[init]
	defaultBranch = "main"

[merge]
	tool = "vimdiff"

[mergetool]
	keepBackup = false

[mergetool "vimdiff"]
	cmd = "nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'"

[user]
	email = "tillbungert@gmail.com"
	name = "Till Bungert"
[safe]
	directory = ~/Projects/neovim
[alias]
	co = checkout
	cm = commit
	st = status
	ps = push
	pl = pull
	a = add

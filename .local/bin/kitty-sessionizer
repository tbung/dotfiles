#!/usr/bin/bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$((find ~/Projects -mindepth 1 -maxdepth 1 -type d; echo "${HOME}/wiki") | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

q1='[.[0].tabs | .[] | {id: (.id), title: .title}] | map(select(.title | startswith("'
q2='"))) | .[0].id'
id=$(kitty @ls | jq "$q1$selected_name$q2")

if [[ $id == 'null' ]]; then
    kitty @new-window --new-tab --title $selected_name --cwd $selected
else
    kitty @focus-tab -m "id:$id"
fi
# if [[ -z $TMUX ]]; then
#     tmux attach-session -t $selected_name
# else
#     tmux switch-client -t $selected_name
# fi

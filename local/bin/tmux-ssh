#!/usr/bin/env bash

selected=$(sed -n '/Host [^\*]/s/Host //p' "$HOME/.ssh/config" | fzf --bind enter:accept-or-print-query)

if [[ -z $selected ]]; then
    exit 0
fi

sessname="${selected//\./_}"

if [[ -z $TMUX ]]; then
    ssh -t "$selected" sh -lc '"tmux new-session -As default"'
else
    tmux new-session -ds "$sessname" "ssh -t $selected sh -lc "\''"tmux new-session -As default"'\'
    tmux set-option prefix None
    tmux set-option key-table nroot
    tmux set-option status off
    
    # switch back to default on detach
    tmux set-option remain-on-exit on
    tmux set-option 'pane-died[0]' 'switch-client -tdefault'
    tmux set-option 'pane-died[1]' "kill-session -t$sessname"
    
    tmux switch-client -t "$sessname"
fi

# Set default values for all following accounts.
defaults
auth           on
tls            on
logfile        ~/.msmtp.log

# Gmail
account        gmail
host           smtp.gmail.com
tls_trust_file /etc/ssl/certs/ca-certificates.crt
port           587
from           tillbungert@gmail.com
user           tillbungert@gmail.com
passwordeval python2 -c "import keyring; print keyring.get_password('offlineimap', 'tillbungert@gmail.com')"

# Uni
account        uni
host           mail.urz.uni-heidelberg.de
tls_trust_file /etc/ssl/certs/ca-certificates.crt
port           587
from           bungert@stud.uni-heidelberg.de
user           tz425
passwordeval python2 -c "import keyring; print keyring.get_password('offlineimap', 'bungert@stud.uni-heidelberg.de')"

# GC
account        gc
host           galileiconsult.de
port           465
tls            on
tls_starttls   off
tls_certcheck  off
from           till.bungert@galileiconsult.de
user           tbungert
passwordeval python2 -c "import keyring; print keyring.get_password('offlineimap', 'till.bungert@galileiconsult.de')"

